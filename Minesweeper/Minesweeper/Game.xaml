<Window x:Class="Minesweeper.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minesweeper"
        mc:Ignorable="d"
        Title="Game" Height="450" Width="800">
    <Grid Name="mainGrid" ShowGridLines="False">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="btn_Menu" Padding="10" Margin="10,10,-89,10" Grid.Row="1" BorderBrush="Black" Click="btn_Menu_Click">Menu</Button>
        <Button x:Name="btn_NewGame" Padding="10" Margin ="115,10,-194,10" Grid.Row="1" HorizontalAlignment="Left" Width="100" BorderBrush="Black" Click="btn_NewGame_Click">NewGame</Button>
        <Button x:Name="btn_flag" Padding="10" Margin ="220,10,-299,10" Grid.Row="1" HorizontalAlignment="Left" Width="100" BorderBrush="Black" Background="LightGray" Click="btn_flag_Click">Flag</Button>
        <Label x:Name="lbl_Mine_Guesses" Margin="325,10,-463,10" Grid.Row="1"></Label>
    </Grid>
</Window>
